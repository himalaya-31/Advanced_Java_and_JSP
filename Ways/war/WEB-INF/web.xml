<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

	<context-param>
		<param-name>num2</param-name>
		<param-value>linkinpark</param-value>
	</context-param>

	<servlet>
		<servlet-name>Way1</servlet-name>
		<servlet-class>pkg.MyServlet1</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Way1</servlet-name>
		<url-pattern>/wayone</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Way2</servlet-name>
		<servlet-class>pkg.MyServlet2</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Way2</servlet-name>
		<url-pattern>/waytwo</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Way3</servlet-name>
		<servlet-class>pkg.Myservlet3</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Way3</servlet-name>
		<url-pattern>/waythree</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ServletForm</servlet-name>
		<servlet-class>pkg.ServletForm</servlet-class>
		
		<init-param>
			<param-name>num</param-name>
			<param-value>Himalaya</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServletForm</servlet-name>
		<url-pattern>/servletForm</url-pattern>
	</servlet-mapping>
	
	
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
